<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.erzbir</groupId>
        <artifactId>numeron</artifactId>
        <version>1.3.0</version>
    </parent>

    <artifactId>buildSrc</artifactId>
    <packaging>jar</packaging>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.erzbir</groupId>
            <artifactId>numeron-boot</artifactId>
        </dependency>
        <dependency>
            <groupId>com.erzbir</groupId>
            <artifactId>numeron-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.erzbir.numeron.utils</groupId>
            <artifactId>numeron-utils</artifactId>
            <version>1.3.0</version>
        </dependency>
        <dependency>
            <groupId>com.erzbir.numeron.console</groupId>
            <artifactId>numeron-console</artifactId>
            <version>1.3.0</version>
        </dependency>
        <dependency>
            <groupId>com.erzbir</groupId>
            <artifactId>numeron-menu</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <groupId>org.apache.maven.plugins</groupId>
                <version>2.5.5</version>
                <configuration>
                    <classifier>exec</classifier>
                    <archive>
                        <manifest>
                            <mainClass>com.erzbir.numeron.NumeronBotApplication</mainClass>
                        </manifest>
                    </archive>
                    <finalName>numeron${project.version}</finalName>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>